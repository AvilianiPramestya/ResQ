<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_light"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="@string/add_posko_name"
                android:textColor="@color/black_dark"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro"
                android:text="@string/add_posko_name_detail"
                android:textColor="@color/grey_dark"
                android:textSize="13sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/edittext_edit_posko_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shape_border_edittext"
                android:fontFamily="@font/source_sans_pro"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                tools:text="SDN 05 Pagi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="@string/add_posko_city"
                android:textColor="@color/black_dark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edittext_edit_posko_city"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_border_edittext"
                android:fontFamily="@font/source_sans_pro"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                tools:text="Jakarta Selatan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="@string/add_posko_district"
                android:textColor="@color/black_dark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edittext_edit_posko_district"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_border_edittext"
                android:fontFamily="@font/source_sans_pro"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                tools:text="Kebayoran Baru" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="@string/add_posko_sub_district"
                android:textColor="@color/black_dark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edittext_edit_posko_sub_district"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_border_edittext"
                android:fontFamily="@font/source_sans_pro"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                tools:text="Gandaria Utara" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="@string/add_posko_address"
                android:textColor="@color/black_dark"
                android:textSize="18sp" />

            <fragment
                android:id="@+id/fragment_edit_posko_address"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp" />

            <Button
                style="@style/OutlinedBorder"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:text="@string/add_posko_locate_me" />

            <EditText
                android:id="@+id/edittext_edit_posko_address"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_border_edittext"
                android:fontFamily="@font/source_sans_pro"
                android:inputType="textLongMessage"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:scrollHorizontally="true"
                android:visibility="gone"
                tools:text="Jl. Gandaria Utara No 30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="@string/add_posko_capacity"
                android:textColor="@color/black_dark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edittext_edit_posko_capacity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_border_edittext"
                android:fontFamily="@font/source_sans_pro"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                tools:text="56" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="@string/add_posko_facility"
                android:textColor="@color/black_dark"
                android:textSize="18sp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro"
                android:text="@string/add_posko_radio_button_medic"
                android:textColor="@color/black_dark"
                android:textSize="18sp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro"
                android:text="@string/add_posko_radio_button_bed"
                android:textColor="@color/black_dark"
                android:textSize="18sp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro"
                android:text="@string/add_posko_radio_button_kitchen"
                android:textColor="@color/black_dark"
                android:textSize="18sp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro"
                android:text="@string/add_posko_radio_button_logistic"
                android:textColor="@color/black_dark"
                android:textSize="18sp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro"
                android:text="@string/add_posko_radio_button_wc"
                android:textColor="@color/black_dark"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="@string/add_posko_additional_info"
                android:textColor="@color/black_dark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edittext_edit_posko_additional_info"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_border_edittext"
                android:fontFamily="@font/source_sans_pro"
                android:inputType="textLongMessage"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                tools:text="tersedia makanan untuk bayi " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="@string/add_posko_contact_name"
                android:textColor="@color/black_dark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edittext_edit_posko_contact_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_border_edittext"
                android:fontFamily="@font/source_sans_pro"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                tools:text="Budi Suhartono" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="@string/add_posko_contact_name"
                android:textColor="@color/black_dark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edittext_edit_posko_contact_number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_border_edittext"
                android:fontFamily="@font/source_sans_pro"
                android:inputType="phone"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                tools:text="081234567890" />

            <Button
                android:id="@+id/button_add_posko_finish"
                style="@style/BlackButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:clickable="true"
                android:text="@string/add_posko_make_posko" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressbar_add_posko"
            style="@style/ProgressBarTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>

</ScrollView>