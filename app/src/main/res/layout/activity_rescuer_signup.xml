<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingTop="40dp"
        android:paddingEnd="24dp"
        android:paddingBottom="40dp">

        <TextView
            android:id="@+id/textview_signup_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro"
            android:text="Nama Lengkap"
            android:textColor="@color/black_dark"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext_signup_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_border_edittext"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textview_signup_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="Alamat Email"
            android:textColor="@color/black_dark"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext_signup_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_border_edittext"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/textview_signup_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="No. HP"
            android:textColor="@color/black_dark"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext_signup_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_border_edittext"
            android:inputType="phone" />

        <TextView
            android:id="@+id/textview_signup_instansi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="Instansi"
            android:textColor="@color/black_dark"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext_signup_instansi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_border_edittext"
            android:inputType="text" />

        <TextView
            android:id="@+id/textview_signup_division"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="Divisi"
            android:textColor="@color/black_dark"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext_signup_division"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_border_edittext"
            android:inputType="text" />

        <TextView
            android:id="@+id/textview_signup_employeenum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="No. ID Karyawan"
            android:textColor="@color/black_dark"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext_signup_employeenum"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_border_edittext"
            android:inputType="text" />

        <TextView
            android:id="@+id/textview_signup_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="Kata Sandi"
            android:textColor="@color/black_dark"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext_signup_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_border_edittext"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textview_signup_repeat_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="Ulangi Kata Sandi"
            android:textColor="@color/black_dark"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext_signup_repeat_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_border_edittext"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/button_signup_continue"
            style="@style/BlackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Lanjut" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/raleway"
            android:text="Masuk sebagai rescuer"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/raleway"
            android:text="Saya ingin dibantu"
            android:textSize="15sp" />
    </LinearLayout>
</ScrollView>