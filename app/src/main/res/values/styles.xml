<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.CustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/colorTransparentWhite</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/black_dark</item>
        <item name="colorPrimaryDark">@color/black_light</item>
        <item name="colorAccent">@color/grey_dark</item>
        <item name="android:colorBackground">@color/white_light</item>
        <item name="android:actionBarStyle">@style/actionBarTheme</item>
    </style>

    <style name="ResQTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/black_dark</item>
        <item name="colorPrimaryDark">@color/black_light</item>
        <item name="colorAccent">@color/grey_dark</item>
        <item name="android:colorBackground">@color/white_light</item>
        <item name="android:actionBarStyle">@style/actionBarTheme</item>
    </style>

    <style name="actionBarTheme" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:fontFamily">@font/pathway_gothic_one</item>
        <item name="android:textColor">@color/white_light</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="BlackButton">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/shape_filled_button</item>
        <item name="android:textColor">@color/white_light</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="OutlinedBorder">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_dark</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/shape_bordered_button</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/grey_light</item>
        <item name="android:textColorSecondary">@color/grey_dark</item>
    </style>

    <style name="ResQButtonTheme" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/black_dark</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/black_light</item>
        <item name="colorAccent">@color/grey_dark</item>
    </style>

    <style name="ProgressBarTheme">
        <item name="colorAccent">@color/black_dark</item> <!-- Whatever color you want-->
    </style>

</resources>
