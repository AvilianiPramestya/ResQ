<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="AppTheme.CustomTheme">
        <item name="android:windowBackground">@color/colorTransparentWhite</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/black_dark</item>
        <item name="colorPrimaryDark">@color/black_light</item>
        <item name="colorAccent">@color/grey_dark</item>
        <item name="android:colorBackground">@color/white_light</item>
        <item name="android:buttonStyle">@style/ResQButtonTheme</item>
        <item name="android:actionBarStyle">@style/actionBarTheme</item>
    </style>
    
    <style name="ResQTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/black_dark</item>
        <item name="colorPrimaryDark">@color/black_light</item>
        <item name="colorAccent">@color/grey_dark</item>
        <item name="android:colorBackground">@color/white_light</item>
        <item name="android:buttonStyle">@style/ResQButtonTheme</item>
        <item name="android:actionBarStyle">@style/actionBarTheme</item>
    </style>
    
    <style name="actionBarTheme" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:fontFamily">@font/pathway_gothic_one</item>
        <item name="android:textColor">@color/white_light</item>
        <item name="android:elevation">8dp</item>
    </style>
    
    <style name="BlackButton" parent="android:Widget.Material.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/black_dark</item>
        <item name="android:textColor">@color/white_light</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:buttonCornerRadius">5dp</item>
    </style>

    <style name="OutlinedBorder" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/white_light</item>
        <item name="android:textColor">@color/black_dark</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:strokeColor">@color/black_dark</item>
    </style>

    <style name="ResQButtonTheme" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/black_dark</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
